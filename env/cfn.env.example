# CloudFormation EKS env for Learner Lab (fiapaws profile)
# Note: Using LabRole for both Cluster and Nodegroup may fail depending on permissions/trust in this Lab.
#teste

AWS_REGION=us-east-1
AWS_PROFILE=fiapaws

CLUSTER_STACK=eks-cluster-stack
NODEGROUP_STACK=eks-nodegroup-stack
CLUSTER_NAME=demo-12-factor-eks
# K8S_VERSION=1.29

# IAM role ARNs (single LabRole for both, per user constraint)
CLUSTER_ROLE_ARN=arn:aws:iam::ACCOUNT_ID:role/LabRole
NODE_ROLE_ARN=arn:aws:iam::ACCOUNT_ID:role/LabRole

# Networking (leave empty to autodiscover default VPC + default SG)
# SUBNET_IDS=subnet-aaaa,subnet-bbbb
# SECURITY_GROUP_IDS=sg-zzzzzz

# Nodegroup (3 nodes, 2 vCPU and 8GiB RAM each: t3.large)
INSTANCE_TYPES=t3.large
DESIRED_SIZE=3
MIN_SIZE=3
MAX_SIZE=3
DISK_SIZE=20
CAPACITY_TYPE=ON_DEMAND
NODEGROUP_NAME=ng-lab
